 @model AnswerAddVM

@{
    var Questions = ViewData["Questions"] as IEnumerable<SelectListItem>;
}

<div class="row" >
    <div class="col-md-4">

        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <h3>Create Question</h3>
            <div class="form-group  mb-3">
                <label asp-for="OptionText"></label>
                <input asp-for="OptionText" class="form-control" />
                <span class="text-danger" asp-validation-for="OptionText"></span>
            </div>
            <div class="form-group  mb-3">
                <label asp-for="IsCorrect"></label>
                <select class="form-control" asp-for="IsCorrect">
                    <option disabled selected>---- Select Option ----</option>
                     <option value="false">false</option>
                     <option value="true">true</option>
                </select>               
            </div>
            <div class="form-group mb-3">
                <label asp-for="QuestionId"></label>
                <select class="form-control" asp-for="QuestionId" asp-items="Questions">
                    <option disabled selected>---- Select Quiz ----</option>
                </select>
                <span class="text-danger" asp-validation-for="QuestionId"></span>
            </div>



            <div class="form-group  mb-3">
                <button class="btn btn-primary" type="submit">Create</button>
            </div>
        </form>

    </div>
</div>
