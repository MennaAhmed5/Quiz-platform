 @model QuestionAddVM

 @{
    var Quizzes = ViewData["Quizzes"] as IEnumerable<SelectListItem>;
 }

<div class="row"  >
    <div class="col-md-4">

        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <h3>Create Question</h3>
            <div class="form-group  mb-3">
                <label asp-for="QuestionText"></label>
                <input asp-for="QuestionText" class="form-control" />
                <span class="text-danger" asp-validation-for="QuestionText"></span>
            </div>
            <div class="form-group mb-3">
            <label asp-for="AnswerType"></label>
            <select class="form-control" asp-for="AnswerType">
                <option disabled selected>---- Select Option ----</option>
                <option value="Text">text</option>
                <option value="Choices">choices</option>
            </select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="QuizId"></label>
                <select class="form-control" asp-for="QuizId" asp-items="Quizzes">
                    <option disabled selected>---- Select Quiz ----</option>
                </select>
                <span class="text-danger" asp-validation-for="QuizId"></span>
            </div>

            

            <div class="form-group  mb-3">
                <button class="btn btn-primary" type="submit">Create</button>
            </div>
        </form>

    </div>
</div>
