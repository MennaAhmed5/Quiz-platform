@model IEnumerable<QuizReadVM>

<div class="row" style="height:600px">
<div class="col-md-12">
   <a class="btn btn-primary" href="/Quizzes/Add">Add New Quiz</a>
   <br />
 

<table class="table table-hover" width="100%">
    <thead>
        <tr>
            <td>Name</td>
            <td>Description</td>
            <td>Image</td>
            <td>Date</td>           
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Date</td>
            <td>
                <a class="btn btn-success" href="/Quizzes/Edit/@item.Id">Edit</a>
                <a class="btn btn-danger" href="/Quizzes/Delete/@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
</<div>
</div>

 
 
